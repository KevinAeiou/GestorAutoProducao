<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/light_blue_600"
    android:gravity="bottom"
    android:padding="20dp"
    android:id="@+id/linearLayoutCabecalho">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        >

        <AutoCompleteTextView
            android:id="@+id/autoCompleteCabecalhoNomePersonagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Nome"
            android:inputType="none"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txtCabecalhoEstadoPersonagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="Estado"
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txtCabecalhoUsoPersonagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="Uso"
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txtCabecalhoEspacoProducaoPersonagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="Espaço de produção"
        android:textSize="14sp"
        android:textColor="@color/white"/>
</LinearLayout>