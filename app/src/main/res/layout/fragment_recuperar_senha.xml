<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".ui.fragment.RecuperarSenhaFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtRecuperarSenha"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@color/white"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtRecuperarSenha"
            android:hint="Seu email"
            android:padding="16dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaoRecuperarSenha"
        style="@style/btn"
        android:background="@drawable/botao_estados_background"
        android:text="Recuperar senha"
        android:enabled="false"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/txtRecuperarSenha"
        app:layout_constraintStart_toStartOf="@+id/txtRecuperarSenha"
        app:layout_constraintTop_toBottomOf="@id/txtRecuperarSenha" />

</androidx.constraintlayout.widget.ConstraintLayout>