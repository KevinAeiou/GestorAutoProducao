<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.DetalhesTrabalhoVendidoFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtDescricaoTrabalhoVendido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_max="488dp"
        android:padding="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Descrição"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtLayoutNomeTrabalhoVendido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/string_nome"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:layout_constraintStart_toStartOf="@id/txtDescricaoTrabalhoVendido"
        app:layout_constraintEnd_toEndOf="@id/txtDescricaoTrabalhoVendido"
        app:layout_constraintTop_toBottomOf="@id/txtDescricaoTrabalhoVendido">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/autoCompleteNomeTrabalhoVendido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="20sp"
            android:inputType="none"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtDataTrabalhoVendido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/txtLayoutNomeTrabalhoVendido"
        app:layout_constraintEnd_toEndOf="@+id/txtLayoutNomeTrabalhoVendido"
        app:layout_constraintTop_toBottomOf="@+id/txtLayoutNomeTrabalhoVendido"
        tools:text="aaaa/MM/dd"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/txtDataTrabalhoVendido"
        app:layout_constraintEnd_toEndOf="@id/txtDataTrabalhoVendido"
        app:layout_constraintTop_toBottomOf="@id/txtDataTrabalhoVendido">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtValorTrabalhoVendido"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Valor"
            android:padding="8dp"
            android:layout_weight="1"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtQuantidadeTrabalhoVendido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:padding="8dp"
            tools:text="Und"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>